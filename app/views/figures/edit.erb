<h1>Edit a Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <label>Edit Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <br><br>

  <label>Edit Title: </label>
    <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>><%= title.name %>
    <% end %>

  <br>

  <label>Or Create a New Title: </label>
  <input type="text" name="new_title" id="title[name]">

  <br><br>

  <label>Landmark: </label>
    <% Landmark.all.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    <% end %>

  <br>

  <label>Or Create a New Landmark: </label>
    <input type="text" name="new_landmark" id="landmark[name]">

  <br><br>

  <input type="submit" value="Edit Figure">
</form>
